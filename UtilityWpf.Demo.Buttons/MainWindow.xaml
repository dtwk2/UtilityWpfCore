<Window x:Class="UtilityWpf.Demo.Buttons.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtilityWpf.Demo.Buttons"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <TabControl>

        <TabItem Header="Check Boxes">
            <local:CheckBoxesUserControl />
        </TabItem>
        <TabItem Header="Buttons">
            <local:ButtonsUserControl />
        </TabItem>
        <TabItem Header="Button">
            <local:ButtonUserControl />
        </TabItem>
        <TabItem Header="Morph">
            <local:MorphUserControl />
        </TabItem>
        <TabItem Header="Switch">
            <local:SwitchControlAndTransitionControlDemoView />
        </TabItem>
        <TabItem Header="Toggle">
            <local:ToggleUserControl />
        </TabItem>
        <TabItem Header="Image">
            <local:ImageUserControl />
        </TabItem>
    </TabControl>
</Window>