    <UniformGrid>

        <GroupBox Header="Interactivity">
            <Grid Width="100" Height="60">
                <Button x:Name="optionsButton">
                    Option
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" />
                            <i:ChangePropertyAction
                                PropertyName="Visibility"
                                TargetObject="{Binding ElementName=optionsBackButton}"
                                Value="Visible" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button x:Name="optionsBackButton" Visibility="Collapsed">
                    Back
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:ChangePropertyAction PropertyName="Visibility" Value="Collapsed" />
                            <i:ChangePropertyAction
                                PropertyName="Visibility"
                                TargetObject="{Binding ElementName=optionsButton}"
                                Value="Visible" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </Grid>
        </GroupBox>

        <GroupBox Header="Transition">
            <FrameworkElement.Resources>

                <Storyboard
                    x:Key="StoryboardOnLoaded"
                    AutoReverse="True"
                    RepeatBehavior="Forever">
                    <hc:GeometryAnimationUsingKeyFrames Storyboard.TargetName="Path2Demo" Storyboard.TargetProperty="Data">
                        <hc:DiscreteGeometryKeyFrame KeyTime="0:0:0.7" Value="{StaticResource CupGeometry}" />
                        <hc:EasingGeometryKeyFrame KeyTime="0:0:1.2" Value="{StaticResource Cup2Geometry}">
                            <hc:EasingGeometryKeyFrame.EasingFunction>
                                <QuarticEase EasingMode="EaseInOut" />
                            </hc:EasingGeometryKeyFrame.EasingFunction>
                        </hc:EasingGeometryKeyFrame>
                    </hc:GeometryAnimationUsingKeyFrames>
                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="Path2Demo" Storyboard.TargetProperty="Fill.(SolidColorBrush.Color)">
                        <DiscreteColorKeyFrame KeyTime="0:0:0.7" Value="#3b5998" />
                        <EasingColorKeyFrame KeyTime="0:0:1.2" Value="#4099ff">
                            <EasingColorKeyFrame.EasingFunction>
                                <QuarticEase EasingMode="EaseInOut" />
                            </EasingColorKeyFrame.EasingFunction>
                        </EasingColorKeyFrame>
                        <EasingColorKeyFrame KeyTime="0:0:1.9" Value="#4099ff" />
                    </ColorAnimationUsingKeyFrames>
                </Storyboard>
            </FrameworkElement.Resources>
            <FrameworkElement.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                    <BeginStoryboard Name="BeginStoryboard" Storyboard="{StaticResource StoryboardOnLoaded}" />
                </EventTrigger>
                <EventTrigger RoutedEvent="FrameworkElement.Unloaded">
                    <StopStoryboard BeginStoryboardName="BeginStoryboard" />
                </EventTrigger>
            </FrameworkElement.Triggers>
            <hc:TransitioningContentControl>
                <Path
                    Name="Path2Demo"
                    Width="100"
                    Height="100"
                    Data="{StaticResource CupGeometry}"
                    Fill="#3b5998" />
            </hc:TransitioningContentControl>
        </GroupBox>

