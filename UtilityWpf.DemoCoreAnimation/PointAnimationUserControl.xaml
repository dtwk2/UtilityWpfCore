<UserControl x:Class="UtilityWpf.DemoAnimation.PointAnimationUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:animation="clr-namespace:UtilityWpf.Animation;assembly=UtilityWpf.AnimationCore"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Button Click="Button_Click" DockPanel.Dock="Top">Animate</Button>

        <Canvas x:Name="Canvas1" Background="GhostWhite" Margin="10"  Height="300" Width="600" >

            <animation:TravellerControl x:Name="TravellerControl1"/>

            <animation:TravellerControl x:Name="TravellerControl2" Stroke="Firebrick"  Foreground="Yellow" RadiusX="10" RadiusY="3"/>

            <animation:PointControl x:Name="PointControl1"   />
        </Canvas>

    </DockPanel>
</UserControl>
