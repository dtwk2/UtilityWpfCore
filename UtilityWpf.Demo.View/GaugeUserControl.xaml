            <StackPanel>
                <Grid>
                    <local1:ProgressCircle
                x:Name="circProg"
                Width="100"
                Height="100"
                Margin="5"
                HorizontalAlignment="Center" />
                    <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="36"
                Foreground="DarkGray"
                Text="{Binding ElementName=circProg, Path=Value}" />
                </Grid>

