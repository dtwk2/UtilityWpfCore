<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:UtilityWpf.TestData.Model">

    <DataTemplate  DataType="{x:Type vm:NoteViewModel}">
        <TextBox HorizontalAlignment="Stretch" FontSize="5"  
                             
                             TextWrapping="Wrap"
                             AcceptsReturn="True"                            
                             MinLines="2"  
                             Text="{Binding Text}" >
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="BorderThickness" Value="0"></Setter>
                    <Setter Property="Background" Value="Transparent"></Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
    </DataTemplate>

    <DataTemplate x:Key="NoteViewModel" DataType="{x:Type vm:NoteViewModel}">

        <TextBlock HorizontalAlignment="Stretch"  
                             FontSize="20"
                             TextWrapping="Wrap"                          
                             Text="{Binding Text}" >
        </TextBlock>

    </DataTemplate>

</ResourceDictionary>