<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                       xmlns:local="clr-namespace:UtilityWpf.TestData.Model">

    <DataTemplate DataType="{x:Type local:Fields}">
      
            <Grid Height="200" Width="400" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="3"
                        Text="Name" />
                <TextBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Text="{Binding Name}" />
                <TextBlock
                        Grid.Row="0"
                        Grid.Column="2"
                        MaxWidth="150"
                        Margin="3"
                        Text="Name not empty, not equal 'foo' and max length is 16"
                        TextWrapping="Wrap" />

                <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="3"
                        Text="Surname" />
                <TextBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="{Binding Surname}" />
                <TextBlock
                        Grid.Row="1"
                        Grid.Column="2"
                        MaxWidth="150"
                        Margin="3"
                        Text="Surname should be equal 'foo'"
                        TextWrapping="Wrap" />

                <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="3"
                        Text="Phone #" />
                <TextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Text="{Binding PhoneNumber}" />
                <TextBlock
                        Grid.Row="2"
                        Grid.Column="2"
                        MaxWidth="150"
                        Margin="3"
                        Text="Phone number required and allow from 9 to 12 digits"
                        TextWrapping="Wrap" />

                <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="3"
                        Text="Age" />
                <TextBox
                        Grid.Row="3"
                        Grid.Column="1"
                        Text="{Binding Age}" />
                <TextBlock
                        Grid.Row="3"
                        Grid.Column="2"
                        MaxWidth="150"
                        Margin="3"
                        Text="Age should be between 18 and 35"
                        TextWrapping="Wrap" />
            </Grid>
    
    </DataTemplate>

</ResourceDictionary>