<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:UtilityWpf.Controls">
    
    <Style TargetType="{x:Type local:ItemsWrapControl}" BasedOn="{StaticResource {x:Type ContentControl}}">
        <Setter Property="Background" Value="Transparent"></Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:ItemsWrapControl}">
                    <DockPanel x:Name="PART_DockPanel" Background="{Binding Background, Source=TemplatedParent}">
                        <WrapPanel x:Name="PART_WrapPanel"/>                
                            <ContentPresenter />                     
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style TargetType="{x:Type local:WrapControl}" BasedOn="{StaticResource {x:Type local:ItemsWrapControl}}">      
    </Style>
</ResourceDictionary>