<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:UtilityWpf.Controls">

    <Style TargetType="{x:Type local:HeaderedListBox}">
        <Style.Resources>
            <ListBox x:Key="a" ItemsSource="{Binding }"/>
        </Style.Resources>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HeaderedListBox}">
                    <StackPanel Orientation="Vertical">
                        <ContentPresenter ContentSource="Header" />
                        <ContentPresenter
                            x:Name="PART_ItemsControl"
                            ContentSource="Content"
                            ContentTemplate="{StaticResource a}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>