<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\UtilityWpf.Controls\UtilityWpf.Controls.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="FileView.cs">
      <DependentUpon>FileView.xaml</DependentUpon>
    </Compile>
    <Compile Update="PathBrowser.cs">
      <DependentUpon>PathBrowser.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <Page Update="FileView.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
    <Page Update="PathBrowser.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
    </Page>
  </ItemGroup>

</Project>
