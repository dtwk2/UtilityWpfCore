<UserControl x:Class="UtilityWpf.Demo.Dragablz.GroupsUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:view1="http://schemas.utility.com/dragablz"
             xmlns:local111="clr-namespace:UtilityWpf.Demo.Common.ViewModel;assembly=UtilityWpf.Demo.Common"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <local111:GroupsViewModel />
    </UserControl.DataContext>

    <UniformGrid Rows="1">
        <ItemsControl ItemsSource="{Binding Data}" />
        <view1:GroupsControl
            IsReadOnlyPath="IsReadOnly"
            ItemsSource="{Binding Data}"
            DisplayMemberPath="Header">
        </view1:GroupsControl>
        <view1:GroupsControl
            IsReadOnlyPath="IsReadOnly"
            ItemsSource="{Binding Data}"
            DisplayMemberPath="Header">
        </view1:GroupsControl>
    </UniformGrid>
</UserControl>