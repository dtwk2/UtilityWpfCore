<UserControl x:Class="Utility.FileSystem.Transfer.Demo.TransferUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:sbl="http://schemas.suggestboxlib.com"
             xmlns:vm="clr-namespace:CachedPathSuggest.ViewModel;assembly=CachedPathSuggest"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:suggestBoxLib="http://schemas.suggestboxlib.com" 
             xmlns:gu="http://gu.se/NumericInput"
             xmlns:service="clr-namespace:CachedPathSuggest.Service;assembly=CachedPathSuggest"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Viewbox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <UniformGrid Rows="1" Grid.Row="0">
                <HeaderedContentControl>
                    <HeaderedContentControl.Header>
                        <TextBlock>Source</TextBlock>
                    </HeaderedContentControl.Header>
                    <HeaderedContentControl.Content>
                        <StackPanel>
                            <suggestBoxLib:SuggestBox x:Name="SourceDirectoryPicker"
                                          Grid.Row="1"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Top"
                                       SuggestSource="{Binding}"
                                      Style="{StaticResource SuggestBoxStyle}"
                                      ItemContainerStyle="{StaticResource ItemContainerStyle}"
                                      Text="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged}">
                                <FrameworkElement.DataContext>
                                    <service:DirectoryAsyncSuggest/>
                                </FrameworkElement.DataContext>
                                <suggestBoxLib:SuggestBox.SelectedValuePath>
                                    <sbl:NameOf Type='{x:Type vm:BaseItem}' Member='Value' />
                                </suggestBoxLib:SuggestBox.SelectedValuePath>
                            </suggestBoxLib:SuggestBox>
                            <gu:SpinnerDecorator  Width="50" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                <gu:IntBox VerticalAlignment="Center"
                                           x:Name="NumberPicker"
                                           Value="3" 
                                           ValidationTrigger="PropertyChanged"
                                           MaxValue="9"
                                           MinValue="1"
                                           AllowSpinners="True"
                                           SpinUpdateMode="PropertyChanged"
                                           Increment="1"/>
                            </gu:SpinnerDecorator>
                        </StackPanel>
                    </HeaderedContentControl.Content>
                </HeaderedContentControl>



                <HeaderedContentControl>
                    <HeaderedContentControl.Header>
                        <TextBlock>Destination</TextBlock>
                    </HeaderedContentControl.Header>
                    <HeaderedContentControl.Content>
                        <Grid>
                            <suggestBoxLib:SuggestBox x:Name="DestinationDirectoryPicker"
                                                      Grid.Row="1"
                                                      HorizontalAlignment="Stretch"
                                                      VerticalAlignment="Top"
                                                      SuggestSource="{Binding}"
                                                      Style="{StaticResource SuggestBoxStyle}"
                                                      ItemContainerStyle="{StaticResource ItemContainerStyle}"
                                                      Text="{Binding Path=Text, UpdateSourceTrigger=PropertyChanged}">
                                <FrameworkElement.DataContext>
                                    <service:DirectoryAsyncSuggest/>
                                </FrameworkElement.DataContext>
                                <suggestBoxLib:SuggestBox.SelectedValuePath>
                                    <sbl:NameOf Type='{x:Type vm:BaseItem}' Member='Value' />
                                </suggestBoxLib:SuggestBox.SelectedValuePath>
                            </suggestBoxLib:SuggestBox>
                        </Grid>
                    </HeaderedContentControl.Content>
                </HeaderedContentControl>
            </UniformGrid>

            <StackPanel Grid.Row="1">
                <Grid  VerticalAlignment="Center" HorizontalAlignment="Center" DockPanel.Dock="Bottom" Height="30" Margin="10">
                    <Button   x:Name="ExportButton" >Export</Button>
                </Grid>
                <ProgressBar Value="100" Height="20" Margin="10"></ProgressBar>
            </StackPanel>      
        </Grid>
    </Viewbox>
</UserControl>
