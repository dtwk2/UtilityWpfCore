<UserControl
    x:Class="UtilityWpf.DemoApp.View.VisualBrushTooltipUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UtilityWpf.DemoApp.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--  https://github.com/fberasategui/WPFSamples/blob/master/src/WPFSamples/Samples/VisualBrushTooltip.xaml  -->
    <Grid Width="600" Height="200" Background="Cyan" >
        <TextBlock Text="hover the mouse over me to see my tooltip" FontSize="40" TextWrapping="Wrap" />
    
    </Grid>
    <UserControl.ToolTip>
        <ToolTip DataContext="{Binding PlacementTarget, RelativeSource={RelativeSource Self}}">
            <Grid Width="600" Height="200">
                <Grid.Background>
                    <VisualBrush Visual="{Binding}" />
                </Grid.Background>
            </Grid>
        </ToolTip>
    </UserControl.ToolTip>
</UserControl>