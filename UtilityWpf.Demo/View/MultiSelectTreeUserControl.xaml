<UserControl
    x:Class="UtilityWpf.DemoApp.MultiSelectTreeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UtilityWpf.DemoApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:UtilityWpf.View;assembly=UtilityWpf.View"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UniformGrid Rows="1">
        <UniformGrid.Resources>

            <DataTemplate DataType="{x:Type local:TreeItemModel}">
                <Border Background="Pink">
                    <TextBlock Text="{Binding Name}" />
                </Border>
            </DataTemplate>
        </UniformGrid.Resources>
        <!--<local:MultiSelectTreeView Name="treeview" ItemsSource="{Binding RootNodes}" Key="Name" ChildrenPath="Children"></local:MultiSelectTreeView>-->
        <!--<ListBox Name="z" ItemsSource="{Binding ElementName=treeview,Path=SelectedItem}">
        </ListBox>-->
        <ContentPresenter Content="{Binding ElementName=z, Path=SelectedItem}" />
    </UniformGrid>
</UserControl>