<UserControl
    x:Class="UtilityWpf.DemoApp.View.SpinnerUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:command="clr-namespace:UtilityWpf.Command;assembly=UtilityWpf"
    xmlns:common="clr-namespace:UtilityWpf.Behavior;assembly=UtilityWpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extrinsic="clr-namespace:UtilityWpf.Controls.Extrinsic;assembly=UtilityWpf.Controls"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="http://schemas.utility.com"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UniformGrid Columns="1">

        <extrinsic:SpinnerControl Width="200" />

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <view:TimeSpanControl
                x:Name="TimeSpanControl1"
                Width="300"
                Height="50">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="ValueChanged">
                        <common:EventCommandExecuter Command="{Binding ElementName=oc, Mode=OneWay}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </view:TimeSpanControl>

            <command:OutputControl
                x:Name="oc"
                Margin="20"
                VerticalAlignment="Center" />
        </StackPanel>

        <UniformGrid
            x:Name="Root"
            Margin="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <extrinsic:ShortTimeSpanControl x:Name="shortTimeSpanControl1" Width="300" />

            <TextBlock
                x:Name="label1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="30"
                Text="{Binding Value, ElementName=shortTimeSpanControl1}" />

            <Button
                Name="button1"
                Grid.Row="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="button1_Click"
                Content="Reset" />
        </UniformGrid>
    </UniformGrid>
</UserControl>