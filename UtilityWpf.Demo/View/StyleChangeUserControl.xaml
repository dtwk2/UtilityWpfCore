<UserControl
    x:Class="UtilityWpf.DemoApp.StyleChangeUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:util="clr-namespace:UtilityWpf.View;assembly=UtilityWpf.View"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>

        <util:ResourcePicker Width="80" Margin="10">
            <system:Uri>pack://application:,,,/Themes/StyleChange/Blue.xaml</system:Uri>
            <system:Uri>pack://application:,,,/Themes/StyleChange/Green.xaml</system:Uri>
        </util:ResourcePicker>

        <Grid
            Width="250"
            Height="180"
            Margin="5"
            Style="{DynamicResource GridBrush}" />
    </StackPanel>
</UserControl>