<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MaterialDesignExtensions.Controls;assembly=MaterialDesignExtensions"
    xmlns:view1="clr-namespace:UtilityWpf.Controls.FileSystem">

    <Style TargetType="{x:Type view1:FileViewer}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type view1:FileViewer}">
                    <Grid>
                        <DockPanel>
                            <UniformGrid Rows="1">
                                <controls:OpenFileControl x:Name="OpenFileControl1" />
                                <Grid>
                                    <ContentControl x:Name="ContentControl1"/>
                                </Grid>
                            </UniformGrid>
                        </DockPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>