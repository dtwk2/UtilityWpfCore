<UserControl x:Class="Utility.WPF.Demo.Adorners.GraphUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Utility.WPF.Demo.Adorners"
             xmlns:ab="http://schemas.utility.com/adorners" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DockPanel>
            <ToolBar DockPanel.Dock="Top">
                <Button Height="40" Click="Add_Click" Content="Add Adorners" />
                <Button Height="40" Click="Remove_Click"  Content="Remove Adorners" />
            </ToolBar>

                <Grid x:Name="Grid" Margin="40">
                    <ab:HorizontalAxis></ab:HorizontalAxis>
                </Grid>
      
        </DockPanel>
    </Grid>
</UserControl>
