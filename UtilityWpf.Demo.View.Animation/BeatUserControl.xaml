<UserControl x:Class="UtilityWpf.Demo.View.Animation.BeatUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilityWpf.Demo.View.Animation" xmlns:util="http://schemas.utility.com" xmlns:ani="http://schemas.utility.com/animation"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <DockPanel.DataContext>
            <local:BeatViewModel />
        </DockPanel.DataContext>
        <StackPanel DockPanel.Dock="Top">
            <util:SpinnerControl
                            Width="100"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Value="{Binding Rate}" />
        </StackPanel>
        <Grid>
            <ani:BeatControl Beat="{Binding Beat}" />
        </Grid>
    </DockPanel>
</UserControl>
