<UserControl x:Class="UtilityWpf.Demo.FileSystem.FileBrowserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilityWpf.Demo.FileSystem"
             xmlns:browser="utilitywpf" 
             xmlns:browser1="http://schemas.utility.com/filesystem"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <browser1:FileBrowser
                x:Name="FileBrowser3"
                Filter="SVG | *.svg"
                Label="Test">
            <browser1:FileBrowser.TextBoxContent>
                <TextBox Width="800" VerticalContentAlignment="Center" />
            </browser1:FileBrowser.TextBoxContent>
        </browser1:FileBrowser>
    </Grid>
</UserControl>
