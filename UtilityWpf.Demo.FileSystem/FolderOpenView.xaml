<UserControl x:Class="UtilityWpf.Demo.FileSystem.FolderOpenView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UtilityWpf.Demo.FileSystem" xmlns:controls1="http://schemas.utility.com" xmlns:p="http://propertytools.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid
        Width="160"
        Height="200"
        Rows="3">

        <controls1:FolderOpenControl Width="300" Height="200" />
        <StackPanel Width="400" VerticalAlignment="Center">
            <p:DirectoryPicker
                Margin="4"
                BrowseButtonContent="Browse..."
                Directory="{Binding Directory}"
                ExploreButtonContent="Explore..." />
            <Label Content="{Binding Directory}" />
        </StackPanel>
        <StackPanel>
            <p:FilePicker
                Margin="4"
                DefaultExtension=".txt"
                FilePath="{Binding File}"
                Filter="Text files|*.txt" />
            <Label Content="{Binding File}" />
        </StackPanel>
    </UniformGrid>
</UserControl>
