            </TabItem>

            <TabItem Header="File 2">
                <local:FolderBrowserView></local:FolderBrowserView>
            </TabItem>

            <TabItem Header="File 3">
                <local:FolderOpenView></local:FolderOpenView>
            </TabItem>

            <!--<TabItem Header="ViewModelViewHost">
            <Grid>
                <reactiveUi:ViewModelViewHost x:Name="FolderViewModelViewHost" />
            </Grid>
        </TabItem>-->

            <TabItem Header="FileView">

                <controls1:FileView Directory="../../../Resources" />

            </TabItem>




        </controlzex:TabControlEx>

    </DockPanel>
</Window>
