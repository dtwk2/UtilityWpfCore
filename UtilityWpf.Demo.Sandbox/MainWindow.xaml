<Window
    x:Class="UtilityWpf.Demo.Sandbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="http://schemas.utility.com" 
    xmlns:view1="clr-namespace:UtilityWpf.Demo.View"
    Title="MainWindow"
    Width="825"
    Height="550"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Z">
            <view1:MasterListUserControl />
        </TabItem>

        <TabItem Header="A">
            <view:MasterDetailView Items="{StaticResource Characters}" />
        </TabItem>

        <TabItem Header="B">
            <view:MasterDetail ItemsSource="{StaticResource Characters}"/>
        </TabItem>

    </TabControl>
</Window>