<UserControl
    x:Class="UtilityWpf.Demo.View.DataGridVirtualisationUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behavior="http://schemas.utility.com/utilitywpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance local1:ProfileCollectionVirtualiseLimited,
                                     d:IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontWeight" Value="DemiBold" />
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="25" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Width" Value="100" />
            <Setter Property="Height" Value="25" />
        </Style>
    </UserControl.Resources>

    <UniformGrid Columns="3">
        <DataGrid
                x:Name="dataGridTest"
                ItemsSource="{Binding Profiles}"
                VerticalScrollBarVisibility="Hidden">
        </DataGrid>

        <Grid x:Name="Grid1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <UniformGrid Rows="1">
                <TextBlock>Infinite Scroll</TextBlock>
                <Slider
                    x:Name="Slider1"
                    IsSnapToTickEnabled="True"
                    Maximum="5"
                    Minimum="1"
                    TickFrequency="1"
                    Value="2.5" />
            </UniformGrid>

            <UniformGrid
                Grid.Row="1"
                Margin="20"
                Rows="2">
                <Label Content="First" />
                <Label Content="Last" />
                <Label Content="Size" />
                <TextBlock x:Name="FirstIndexBox" />
                <TextBlock x:Name="LastIndexBox" />
                <TextBlock x:Name="SizeBox" />
            </UniformGrid>
            <DataGrid
                x:Name="dataGrid1"
                Grid.Row="2"
                ItemsSource="{Binding Profiles}"
                VerticalScrollBarVisibility="Hidden">
                <i:Interaction.Behaviors>
                    <behavior:DataGridVisibleItemsBehavior x:Name="Behavior1" MouseFactor="{Binding ElementName=Slider1, Path=Value}" />
                </i:Interaction.Behaviors>
            </DataGrid>
        </Grid>

        <Grid x:Name="Grid2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock>Delayed Visibility</TextBlock>
            <UniformGrid
                Grid.Row="1"
                Margin="20"
                Rows="2">
                <Label Content="First" />
                <Label Content="Last" />
                <Label Content="Size" />
                <TextBlock x:Name="FirstIndexBox2" />
                <TextBlock x:Name="LastIndexBox2" />
                <TextBlock x:Name="SizeBox2" />
            </UniformGrid>
            <DataGrid
                x:Name="dataGrid2"
                Grid.Row="2"
                ItemsSource="{Binding Profiles}">
                <i:Interaction.Behaviors>
                    <behavior:DataGridVisibleItemsBehavior x:Name="Behavior2" MouseFactor="1" />
                </i:Interaction.Behaviors>
            </DataGrid>
        </Grid>
    </UniformGrid>
</UserControl>