<UserControl x:Class="UtilityWpf.Demo.View.CollapseBoxUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="http://schemas.utility.com"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <TabControl>
        <TabItem Header="CollapseBox">
            <UniformGrid>
                <controls:CollapseBox Height="20" Width="200"  CollapsedContent="3gdsd" ExpandedContent="sdff" />
                <controls:CollapseBox Height="70" Width="500"  CollapsedContent="3gdsd" ExpandedContent="sdff" />

                <controls:CollapseBox Height="50" Width="100"  CollapsedContent="3gdsd" ExpandedContent="sdff" />
                <controls:CollapseBox Height="100" Width="300"  CollapsedContent="3gdsd" ExpandedContent="sdff" />
            </UniformGrid>
        </TabItem>
    </TabControl>
</UserControl>