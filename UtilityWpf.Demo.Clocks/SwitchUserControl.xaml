<UserControl x:Class="UtilityWpf.Demo.Clocks.SwitchUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UtilityWpf.Demo.Clocks"
             xmlns:custom="http://schemas.utility.com/clocks"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="0.4*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>

        <custom:SwitchClock Grid.Row="0" />

        <custom:SwitchClock  Grid.Row="1" />
        <custom:SwitchClock Grid.Row="2" />
        <custom:SwitchClock Grid.Row="3" />
    </Grid>
</UserControl>