<Window
    x:Class="Utility.WPF.Demo.Date.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:date="clr-namespace:Utility.WPF.Controls.Date;assembly=Utility.WPF.Controls.Date"
    xmlns:helper="clr-namespace:Utility.WPF.Controls.Date.Helper;assembly=Utility.WPF.Controls.Date"
    xmlns:infra="clr-namespace:Utility.WPF.Demo.Date.Infrastructure"
    xmlns:local="clr-namespace:Utility.WPF.Demo.Date"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:DateWork.Models"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:anim="http://schemas.utility.com/animation"
    xmlns:model="clr-namespace:Utility.WPF.Demo.Date.Infrastructure.Model"
    Title="Utility Journal"
    Width="800"
    Height="850"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    mc:Ignorable="d">

    <FrameworkElement.Resources>
        <local:NotesConverter x:Key="ValueConverter" />
        <local:NoteConverter x:Key="Value2Converter" />
        <helper:DefaultConverter x:Key="DefaultConverter" />
        <local:CountToBooleanConverter x:Key="CountToBooleanConverter" />
    </FrameworkElement.Resources>

    <!--<TabControl>
        <TabItem Header="Main">-->


 
            <DockPanel>
                <!--<Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>-->

                <Viewbox Width="400"       DockPanel.Dock="Right">

             
                    <date:CalendarControl  x:Name="CalendarControl" 
                                           ValueConverter="{StaticResource Value2Converter}" 
                                           Grid.Column="1" DockPanel.Dock="Right"/>
                </Viewbox>
                    <materialDesign:ColorZone
                        
                        Margin="8"
                        Padding="8"
                        materialDesign:ShadowAssist.ShadowDepth="Depth3"
                        CornerRadius="3"
                  
                        Mode="PrimaryMid">
                    <!--<Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>-->

                        <!--<Border
                    Grid.Row="1"
                    BorderBrush="{DynamicResource SecondaryHueMidBrush}"
                    BorderThickness="1">-->
                        <FrameworkElement.Resources>
                            <infra:NoteDateConverter x:Key="NoteDateConverter" />
                            <DataTemplate DataType="{x:Type local:DayNotesViewModel}">
                                <DockPanel>
                                    <ComboBox
                                    Height="40"
                                    HorizontalContentAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Background="Transparent"
                                    DisplayMemberPath="RevisionDateTime"
                                    DockPanel.Dock="Top"
                                    FontSize="16"
                                    IsEnabled="{Binding Notes.Count,
                                    ConverterParameter=1,
                                    Converter={StaticResource CountToBooleanConverter}}"
                                    ItemsSource="{Binding Notes}"
                                    SelectedIndex="{Binding SelectedIndex}" />

                                    <ContentControl Content="{Binding SelectedNote}" />
                                </DockPanel>
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type model:Note}">
                                <DockPanel Background="Transparent">
                                    <WrapPanel
                                    Background="Transparent"
                                    DockPanel.Dock="Top"
                                    Opacity="0.4"
                                    Orientation="Horizontal">
                                        <TextBlock Margin="4" Text="Date" />
                                        <TextBlock Margin="4" Text="{Binding DateTime}" />
                                        <Rectangle Margin="10,0,10,0" />
                                        <TextBlock Margin="4" Text="Revision Date" />
                                        <TextBlock Margin="4" Text="{Binding RevisionDateTime}" />
                                    </WrapPanel>

                                    <TextBox TextWrapping="Wrap"
                                             AcceptsReturn="True"
                                        MinWidth="20"
                                        MinHeight="20"
                                        Background="Transparent"
                                        FontSize="18"
                                        Text="{Binding Text, TargetNullValue='Text Here'}" />

                                </DockPanel>
                            </DataTemplate>
                        </FrameworkElement.Resources>

              
                            <Grid Height="1000">
                                <Viewbox >

                                    <!--<TextBlock Margin="10" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"                         
                                               Opacity="0.04"
                                               Text="{Binding ElementName=CalendarControl, Path=SelectedItem, StringFormat='{}{0:dd/MM/yyyy}'}" />-->


                                    <anim:FadeControl x:Name="FadeControl" AnimationTime="1000" IsInvertFade="True" Reverse="True">
                                        <TextBlock Margin="10" 
                                                   x:Name="DateTextBlock"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"                         
                                                   Opacity="0.1"
                                                   Text="{Binding ElementName=CalendarControl, Path=SelectedItem, StringFormat='{}{0:dd/MM/yyyy}'}" >
                                            <b:Interaction.Triggers>
                                                <b:PropertyChangedTrigger Binding="{Binding ElementName =DateTextBlock, Path=Text}">
                                                    <b:InvokeCommandAction Command="{Binding ElementName=FadeControl, Path=FadeCommand}"/>
                                                </b:PropertyChangedTrigger>
                                            </b:Interaction.Triggers>
                                        </TextBlock>
                                    </anim:FadeControl>

                                </Viewbox>
                                <ContentControl
                                    Grid.Row="1"
                                    Background="Transparent"
                                    Content="{Binding ElementName=CalendarControl, Path=SelectedItem, Converter={StaticResource ValueConverter}}" />
                            </Grid>

                        </materialDesign:ColorZone>

                        <!--</Border>-->
                    <!--</Grid>-->
                <!--</Grid>-->
            </DockPanel>

        <!--</TabItem>
        <TabItem Header="Other">
        </TabItem>
    </TabControl>-->

</Window>
