<UserControl x:Class="UtilityWpf.Demo.Animation.ExplosionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UtilityWpf.Demo.Animation"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid>
        <Button Click="Button_Click">Click</Button>
        <Ellipse x:Name="MainEllipse" Fill="RoyalBlue" Height="200" Width="200"></Ellipse>
        <Ellipse x:Name="TwoEllipse" Fill="IndianRed" Height="200" Width="200"></Ellipse>
        <Ellipse x:Name="ThreeEllipse" Fill="ForestGreen" Height="200" Width="200"></Ellipse>
    </UniformGrid>
</UserControl>